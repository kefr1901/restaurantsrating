<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Resturants</title>
 
  <link rel="stylesheet" href="stylesheets/style.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/692051db43.js" crossorigin="anonymous"></script>
    
</head>

<body>


  <nav class="navbar navbar-dark bg-dark text-center">
    <a class="navbar-brand">
      <h3>Welcome to restaurant rating <i class="fas fa-utensils"></i> ! </h3>
    </a>
    <form class="form-inline">

      <a href="/register/logout" class="btn btn-danger"> <i class="fas fa-sign-out-alt"></i> Sign out </a>
    </form>
  </nav>
                                              
                                                    <!--UPDATE FORM-->


    
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit the restaurant!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="update_form" action="" method="POST">
          <div class="form-group">
            <label for="new_name">Name</label>
            <input type="text" id="new_name" name="new_name" class="form-control"
              placeholder="Enter your new name">
          </div>
          <div class="form-group">
            <label for="new_comment">Comment</label>
            <input type="text" id="new_comment" name="new_comment" class="form-control"
              placeholder="Enter your new comment">
          </div>
          
          <button id="update_btn"  class="btn btn-success btn-block">Edit resturant</button>
        </form>
      </div>
      </div>
    </div>
  </div>


    

                                          <!--REVIEW FORM MODAL-->

  
    <div class="modal fade" id="reviewModal" tabindex="-1" role="dialog" aria-labelledby="reviewModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="reviewModalLabel">Review this restaurant!</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="review_form" action="/resturant/review/:id" method="POST">

              <div class="form-group">
                <label for="new_review">review</label>
                <input type="text"  id="new_review" name="new_review" class="form-control"
                  placeholder="Enter your new review">
        
              </div>
              <div class="form-group">
                <label for="new_rating">Rating the restaurant from 1-5</label>
                <input type="number" max="5" id="new_rating" name="new_rating" class="form-control"
                  placeholder="Enter number between 1 & 5">
        
              </div>
              <button id="review_btn"  type="submit" class="btn btn-success btn-block">Add review</button>
            </form>
          </div>
          </div>
        </div>
      </div>

    
  

                                          <!--ADD RESTURANT FORM-->


  <div class="modal fade" id="add_resturant" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header text-center">
          <h4 class="modal-title w-100 font-weight-bold">Add a new restaurant</h4>
          
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/resturant/add" method="POST">
          <div class="form-group">
            <label class="text-center" for="name">Name of restaurant</label>
            <input type="name" id="name" name="name" class="form-control" placeholder="Enter name of restaurant">
            

          </div>
          <div class="form-group">
            <label for="comment">Comment</label>
            <input type="text" id="comment" name="comment" class="form-control" placeholder="" >
            

          </div>
          <div class="form-group">
            <label for="rating">Rate the restaurant</label>
            <input type="text" id="rating" name="rating" class="form-control" placeholder="Enter number between 1 & 5">
          

          </div>
          <button class="btn btn-success btn-block" value="submit">Add to list of resturants</button>
        </form>
      </div>
      <div class="modal-footer d-flex justify-content-center">
      </div>
    </div>
  </div>
  </div>
    <div class="text-center">
      <h2>All restaurants!  </h2>
      <a href="" class="btn btn-primary btn-rounded mb-4" data-toggle="modal" data-target="#add_resturant">Add a new
        restaurant <i class="fas fa-plus"></i></a>
  
    </div>

    
    
    <!--SKRIVER UT REStuRANGER MED ETT KORT-->
    
    <div class="container">
      <div class="resturants ">
      <div class="row d-flex col-md-12 text-center">

        <% for(var i=0; i < resturants.length; i++) {%>

         
        <div class="card" style="width: 20rem;">
          <img src="/images/lentils-beans-legumes-vegetables-1296x728-header-1296x728.jpg" class="card-img-top"
            alt="...">
          <div class="card-body">
            
            <h5 class="card-title"><span>Name: </span><%=  resturants[i].resturant_name %> <i class="fas fa-utensils"></i> </h5>
            <hr>
            <h5 class="card-text"><span>Comment: </span><%= resturants[i].resturant_comment %></h5>
            <hr>

            <h5 class="card-text"><span>Inital rating: </span><%= resturants[i].resturant_rating %></h5>
            <hr>
            <h5>REVIEWS <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></h5>
            
            <h5 class="card-text"><span>Number of reviews: </span><%= resturants[i].NR_Recen %></h5>
            <h5 class="card-text"><span>Average reviews rating: </span><%= resturants[i].avg %></h5>
            <hr>
            
            <% for (var j = 0; j < reviews.length; j++) {%>
              <% if (reviews[j].resturantID == resturants[i].resturantID ){%>
                
                <ul>

               <li><p> Review: <span><%= reviews[j].resturantReview %></span> with a rating of: <span><%= reviews[j].reviewRating%></span>  </p> </li>
              

              </ul>

              <%   }} %>
            
            <button  name="<%= resturants[i].resturantID %>" class="btn btn-danger delete">delete</button> <button name="<%= resturants[i].resturantID %>" class="btn btn-primary review" data-toggle="modal" data-target="#reviewModal">Review</button> <button name="<%= resturants[i].resturantID %>" class="btn btn-warning update" data-toggle="modal" data-target="#exampleModal">Update</button>
          </div>

        </div>
        
        <% } %>
        
      </div>
    </div>

  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>

  <script src="javascripts/script.js"></script>
</body>

</html>